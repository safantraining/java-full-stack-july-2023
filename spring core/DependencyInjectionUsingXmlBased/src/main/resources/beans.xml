<?xml version="1.0" encoding="UTF-8"?>  
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
  

<!--  Employee e1 = new Emplyee(); -->
<bean id="e1" class="com.excelr.model.Employee">
<property name="message" value="welcome to bangalore"></property>
<property name="department" ref="dept"></property>

</bean>

<bean id="e2" class="com.excelr.model.Employee">
<property name="message" value="welcome to chennai"></property>
</bean>

<bean id="dept" class="com.excelr.model.Department">
</bean>
  
</beans>  